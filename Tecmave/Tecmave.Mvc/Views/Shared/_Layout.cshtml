<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tecmave.Mvc</title>

    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="~/css/theme-lighten.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/brand-red-hard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="~/Tecmave.Mvc.styles.css" asp-append-version="true" />

</head>
<body>
    <div class="app">
        
        <aside class="sidebar">
            <div class="brand">
                <img src="~/img/tecmave_logo_innovacion.jpg" alt="">
                <span>Tecmave</span>
            </div>
            <div class="subtle">Gestión</div>
            <nav class="nav">
                <a asp-controller="Home" asp-action="Index"><i class="fa-solid fa-gauge-high"></i> Panel</a>
                <a asp-controller="Vehiculos" asp-action="Index" class="client-only"><i class="fa-solid fa-car"></i> Vehículos</a>
                <a asp-controller="Clientes" asp-action="Index" class="client-only"><i class="fa-solid fa-user-group"></i> Clientes</a>
                <a asp-controller="Servicios" asp-action="Index" class="client-only"><i class="fa-solid fa-screwdriver-wrench"></i> Servicios</a>
                <a asp-controller="Agendamiento" asp-action="Index" class="client-only"><i class="fa-solid fa-calendar-check"></i> Agendamiento</a>
                <a asp-controller="Resenas" asp-action="Index" class="client-only"><i class="fa-solid fa-star"></i> Reseñas</a>
                <a asp-controller="Colaboradores" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-id-badge"></i> Colaboradores</a>
                <a asp-controller="Facturacion" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-file-invoice-dollar"></i> Facturación</a>
                <a asp-controller="Estadisticas" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-chart-line"></i> Estadísticas</a>
                <a asp-controller="Administracion" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-gear"></i> Administración</a>
                <a asp-controller="Usuarios" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-users"></i> Usuarios</a>
                <a asp-controller="ResenasUsuarios" asp-action="Index" class="admin-only hide-admin-options"><i class="fa-solid fa-comments"></i> Reseñas Usuarios</a>
            </nav>
        </aside>

        
        <header class="topbar">
            <button class="iconbtn" data-toggle-sidebar><i class="fa-solid fa-bars"></i></button>
            <div id="site-header" class="brand2">
                <img class="logo-xs" src="~/img/tecmave_logo_innovacion.jpg" alt="Tecmave"
                     style="width:20px;height:20px;border-radius:6px;margin-right:6px;">
                <span>@ViewData["Title"]</span>
            </div>
            <div class="search">
                <input type="search" placeholder="Buscar clientes, placas, servicios…" />
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M21 21l-4.3-4.3M11 19a8 8 0 1 1 0-16 8 8 0 0 1 0 16Z"
                          stroke="currentColor" stroke-width="1.6" />
                </svg>
            </div>
            <button class="iconbtn"><i class="fa-regular fa-bell"></i></button>
           
            <partial name="_LoginPartial" />
        </header>

        
        <main class="main">
            <div class="container">
                @RenderBody()
            </div>

            <footer class="footer-v2" id="site-footer">
                <div class="footer-v2-main">
                    <div class="container">
                        <div class="footer-grid">
                            <div class="footer-col">
                                <img src="~/img/tecmave_logo_innovacion.jpg" alt="Tecmave Logo" class="footer-logo">
                                <p class="footer-slogan">Soluciones para su flota</p>
                                <div class="footer-v2-socials">
                                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                    <a href="#"><i class="fab fa-instagram"></i></a>
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                </div>
                            </div>
                            <div class="footer-col">
                                <h4>Enlaces Rápidos</h4>
                                <ul class="footer-list">
                                    <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                                    <li><a asp-controller="Informacion" asp-action="Index">Blog</a></li>
                                    <li><a asp-controller="Contacto" asp-action="Index">Contacto</a></li>
                                </ul>
                            </div>
                            <div class="footer-col">
                                <h4>Contáctanos</h4>
                                <ul class="footer-list contact-info">
                                    <li><i class="fas fa-map-marker-alt"></i> <span>San José, Costa Rica</span></li>
                                    <li><i class="fas fa-phone-alt"></i> <span>+506 8888-8888</span></li>
                                    <li><i class="fas fa-envelope"></i> <span>info@tecmave.com</span></li>
                                </ul>
                            </div>
                            <div class="footer-col">
                                <h4>Suscríbete</h4>
                                <form class="subscribe-form">
                                    <input type="email" placeholder="Tu correo electrónico">
                                    <button type="submit">Enviar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-v2-bottom">
                    <div class="container">
                        <p>© 2025 Tecmave. Todos los derechos reservados.</p>
                    </div>
                </div>
            </footer>
        </main>

        <!-- ✅ FOOTER -->
        
    </div>

    <!-- ✅ Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/assets/js/dashboard.js"></script>
    <script src="~/assets/js/nav-active.js"></script>
    <script src="~/assets/js/role-ui.js"></script>
    <script src="~/assets/js/footer-config.js"></script>
    <script src="~/assets/js/chatbot.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

