    <script defer src="~/assets/js/footer-config.js"></script>
    <script src="~/assets/js/global-features.js"></script>
  <script>
    
document.addEventListener('DOMContentLoaded', () => {
        const testimonialsContainer = document.getElementById('testimonials-container');
        let reviews = JSON.parse(localStorage.getItem('tecmave.reviews')) || [
            { name: 'María Rodríguez', rating: 5, comment: 'Excelente servicio! Repararon mi vehículo en tiempo récord y con una calidad impresionante. Definitivamente mi taller de confianza.', date: '2020-01-01' },
            { name: 'Carlos Méndez', rating: 5, comment: 'El diagnóstico computarizado detectó un problema que otros talleres no pudieron encontrar. Muy profesionales y transparentes.', date: '2021-01-01' },
            { name: 'Ana Fernández', rating: 5, comment: 'Servicio de grúa 24/7 me salvó en una emergencia. Rápidos, eficientes y con precios justos. Los recomiendo totalmente.', date: '2022-01-01' }
        ];

        function renderTestimonials() {
            testimonialsContainer.innerHTML = '';
            const latestReviews = reviews.slice(0, 3);
            latestReviews.forEach(review => {
            const testimonialEl = document.createElement('div');
            testimonialEl.className = 'testimonial-card';
            testimonialEl.innerHTML = `
                <div class="testimonial-content">
                    <i class="fas fa-quote-left"></i>
                        <p>${review.comment}</p>
                </div>
                <div class="testimonial-author">
                    <div class="author-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="author-info">
                            <h4>${review.name}</h4>
                            <span>Cliente desde ${new Date(review.date).getFullYear()}</span>
                    </div>
                </div>
            `;
            testimonialsContainer.appendChild(testimonialEl);
            });
        }

        renderTestimonials();
    });
</script>

  <script defer src="~/assets/js/translator.js"></script>
