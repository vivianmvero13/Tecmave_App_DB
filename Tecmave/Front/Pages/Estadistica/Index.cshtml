@page
@model Front.Pages.Estadistica.IndexModel
@{
}



<div class="admin-dashboard">
  <div class="admin-cards">
    <div class="admin-card">
      <h4>Ingresos Totales</h4>
      <h2 id="totalIngresos">₡0</h2>
      <span id="ingresosVariacion"></span>
    </div>
    <div class="admin-card">
      <h4>Citas Pendientes</h4>
      <h2 id="citasPendientes">0</h2>
      <span id="citasNuevas"></span>
    </div>
    <div class="admin-card">
      <h4>Nuevos Clientes</h4>
      <h2 id="nuevosClientes">0</h2>
      <span id="clientesVariacion"></span>
    </div>
  </div>
</div>
<div class="admin-dashboard-row">
  <div class="admin-dashboard-half">
    <div class="admin-dashboard-chart">
        <h3>Resumen de ingresos por estado de factura</h3>
        <canvas id="ingresosEstadoChart"></canvas>
    </div>
  </div>
  <div class="admin-dashboard-half">
    <div class="admin-dashboard-chart">
        <h3>Ingresos por día (últimos 7 días)</h3>
        <canvas id="ingresosDiaChart"></canvas>
    </div>
  </div>
</div>

<div class="admin-dashboard-row">
    <div class="admin-dashboard-half">
        <h3>Top clientes que más pagan</h3>
        <ul id="topClientesLista" class="top-clientes-list"></ul>
    </div>
    <div class="admin-dashboard-half">
        <h3>Citas por estado</h3>
        <canvas id="citasEstadoChart"></canvas>
    </div>
</div>

<div class="admin-dashboard-activity">
    <h3>Actividad Reciente</h3>
    <table class="activity-table">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Acción</th>
                <th>Usuario</th>
                <th>Detalle</th>
            </tr>
        </thead>
        <tbody id="actividadRecienteBody">
        </tbody>
    </table>

</div>

<div class="footer-edit-container">
    <button id="btn-edit-footer" class="btn footer-edit-btn">Editar footer</button>
</div>

<script src="~/js/adminDashboard.js"></script>



