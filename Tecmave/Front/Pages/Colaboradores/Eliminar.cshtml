@page "{id:int}"
@model Front.Pages.Colaboradores.EliminarModel
@{
    ViewData["Title"] = "Eliminar Colaborador";
}

<h2>Eliminar Colaborador</h2>

<h4>¿Está seguro de eliminar este colaborador?</h4>

<div class="border p-3 rounded mt-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Colaborador.Nombre @Model.Colaborador.Apellido</dd>

        <dt class="col-sm-3">Cédula</dt>
        <dd class="col-sm-9">@Model.Colaborador.Cedula</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Colaborador.Correo</dd>

        <dt class="col-sm-3">Cargo</dt>
        <dd class="col-sm-9">@Model.Colaborador.Cargo</dd>

        <dt class="col-sm-3">Estado</dt>
        <dd class="col-sm-9">@Model.Colaborador.Estado</dd>
    </dl>
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Colaborador.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
