<script>
function validarAgenda(){{
  const f = document.getElementById('fecha').value;
  const h = document.getElementById('hora').value;
  if(!f || !h) {{ alert('Selecciona fecha y hora'); return; }}
  toast('Cita agendada (simulación)');
}}
</script>

